{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",  
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "src",
    "rootDirs": ["src", "tests"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
  },
  "include": ["src", "tests"],  
}